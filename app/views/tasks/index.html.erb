<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク内容</th>
      </tr>
    </thead>
      <% @tasks.each do |task| %>
        <tr>
          <th><%= link_to task.id, task%></th>
          <th><%= task.status %></th>
          <th><%= task.content %></th>
        </tr>
      <% end %>
  </table>

  <div>
    <%= paginate @tasks %>
  </div>
  
  <%= link_to 'タスクの新規作成', new_task_path, class: 'btn btn-primary' %>
<% end %>